script에서 html요소로 접근 방법

id를 이용한 방법
var a = document.getElementById('id이름')
var a = document.querySelector('#id이름')

class를 이용한 방법
var b = docment.getElementsByClassName('class이름')
var b = document.querySelectorAll('.class이름')
b1[0].
b1[1].

var b2 = document.querySelector('.class이름')
b2.innerHTML

name을 이용한 방법
c = docment.getElementsByName('name')  //var 는 써도되고 안써도된다.
c[0].
c[1].

tag이름을 이용한 방법 
d = document.getElementsByTagName('tag이름')
d = document.querySelectorAll('tag이름')

d = document.querySelector('tag이름')

// 요소의 값 가져오기, **************
a.value  - input요소, select/option, textarea  
b1[0].innerHTML  - div, p, span, td, label, a, h1,h2, b, strong, em, rem, mark
d2.innerText - div, p, span, td, label, a, h1,h2, b, strong, em, rem, mark

// 요소에 결과값을 출력하기
value = "hi"; - input요소, select/option, textarea  
b1[0].innerHTML = "<a>sdg<br>네이버</a>"; 
b1[1].innerText = "<a>sdg<br>네이버</a>"; 

<p> hello <span> hi </span> <a>ㅎㅇ </a> </p> -- text로하면 <>사이 그대로 다 출력 







